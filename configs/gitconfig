# vim: set ft=gitconfig:
[include]
    path = ~/gitconfig.local

[color]
    diff = auto
    status = auto
    branch = auto
    interactive = auto
    ui = true
    pager = true


[core]
    pager = less -S
    filemode = false
    editor = vim -f


[merge]
    tool = vimdiff


[alias]
    type = cat-file -t
    dump = cat-file -p

