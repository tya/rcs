# vim: set ft=gitconfig:
[include]
    path = ~/gitconfig.local

[color]
    diff = auto
    status = auto
    branch = auto
    interactive = auto
    ui = true
    pager = true

[core]
    pager = less -S
    filemode = false
    editor = vim -f
    excludesfile = ~/rcs/configs/gitignore

[diff]
    tool = icdiff

[merge]
    tool = vimdiff

[alias]
    type = cat-file -t
    dump = cat-file -p

[push]
    default = matching
